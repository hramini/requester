{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES5",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strictPropertyInitialization": false,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "noResolve": false,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
